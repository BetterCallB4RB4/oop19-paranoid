            <Label fx:id="lblName" text="INSERISCI IL TUO NOME: " textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="txtName">
                     <font>
                        <Font size="15.0" />
                     </font></TextField>
                  <Button fx:id="btnSend" mnemonicParsing="false" onMouseClicked="#btnSendOnClickHandler" text="INVIA">
                     <font>
                        <Font size="15.0" />
                     </font></Button>
               </children>
            </HBox>
