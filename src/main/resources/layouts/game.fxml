<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane disable="true" dividerPositions="375.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paranoid.controller.GameController">
   <items>
      <AnchorPane style="-fx-background-image: url(&quot;backgrounds/bggame2.jpg&quot;); -fx-background-size: stretch;">
         <children>
            <VBox>
               <children>
                  <Label text="PARANOID">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblHighScore" text="HIGHSCORE: ">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblScore" text="SCORE: ">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblLives" text="LIVES: ">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      <AnchorPane>
         <children>
            <BorderPane>
               <center>
                  <Pane style="-fx-background-image: url(&quot;backgrounds/bggame.gif&quot;); -fx-background-size: stretch;" BorderPane.alignment="CENTER">
                     <children>
                        <Canvas fx:id="canvas" />
                     </children>
                  </Pane>
               </center>
               <left>
                  <Pane prefHeight="200.0" prefWidth="15.0" style="-fx-background-color: red;" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Pane prefHeight="200.0" prefWidth="15.0" style="-fx-background-color: red;" BorderPane.alignment="CENTER" />
               </right>
               <top>
                  <Pane prefHeight="15.0" style="-fx-background-color: red;" BorderPane.alignment="CENTER" />
               </top>
            </BorderPane>
         </children>
      </AnchorPane>
   </items>
</SplitPane>
